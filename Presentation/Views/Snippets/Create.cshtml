@model CreateSnippetViewModel

@{
    ViewBag.Title = "Create Snippet";
}

<h2>Create Snippet</h2>

@using (Html.BeginForm("Create", "Snippets", FormMethod.Post))
{
    <form class="form-horizontal">
        <div class="form-group">
            <label class="control-label">Description</label>
            @Html.TextBoxFor(p => p.Snippet!.Description, new { @class = "form-control" })
        </div>
                <div class="form-group">
                    <label class="control-label">Snippet Body</label>
                    @Html.TextAreaFor(p => p.Snippet!.SnippetBody, new { @class = "form-control" })
                </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
}
